<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |book| %>
  <h4>Title</h4>
  <%= book.text_field :title %>
  <h4>Body</h4>
  <%= book.text_area :body %>
  <%= book.submit 'Update Book' %>
  <td><%= link_to "show", book_path(@book.id) %></td>
  <a class="back" href="/books">Back</a>
<% end %>
