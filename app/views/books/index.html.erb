<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   <h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr class="book-box">
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to "show", book_path(book) %></td>
           <td><%= link_to "edit", edit_book_path(book) %></td>
           <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
</table>



  <h2>New Book</h2>

   <%= render 'layouts/error_messages', book: @book %>

<%= form_with model:@book, local:true do |f| %>

    <div class="field">
      <label for="book_body">Title</label>
      <%= f.text_field :title %>
    </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>

